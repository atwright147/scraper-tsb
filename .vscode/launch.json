    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Unit Tests",
            "program": "${workspaceRoot}/node_modules/.bin/_mocha",
            "cwd": "${workspaceRoot}",
            "args": [
                "-u", "tdd",
                "--timeout=999999",
                "--colors",
                "--opts", "${workspaceRoot}/mocha.opts",
                "${workspaceRoot}/src/**/*.spec.js"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Unit Tests: Current File",
            "program": "${workspaceRoot}/node_modules/.bin/_mocha",
            "cwd": "${workspaceRoot}",
            "args": [
                "-u", "tdd",
                "--timeout=999999",
                "--colors",
                "--opts", "${workspaceRoot}/mocha.opts",
                "${command:getTestFile}"
            ],
        }

    ]
}
